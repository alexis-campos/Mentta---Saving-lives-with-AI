{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm install && npm run build"
    },
    "deploy": {
        "numReplicas": 1,
        "startCommand": "npx serve dist -s -l $PORT",
        "restartPolicyType": "ON_FAILURE"
    }
}