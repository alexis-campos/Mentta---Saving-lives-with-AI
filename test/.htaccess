# Bloquear acceso a directorio de tests (DEV-020)
# Estos archivos solo deben ser accesibles via CLI o durante desarrollo

# Denegar acceso a todos los archivos
<FilesMatch ".*">
    # Apache 2.4+
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    # Apache 2.2
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</FilesMatch>
